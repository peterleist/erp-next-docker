# ERPNext Docker Compose Environment Variables
# Copy this file to .env and customize the values

# ========================================
# MULTI-INSTANCE SETUP
# ========================================
# Project name - CHANGE THIS for each instance!
# This ensures volumes and containers have unique names
COMPOSE_PROJECT_NAME=erpnext-instance1

# ========================================
# PORTS - CHANGE THESE for each instance!
# ========================================
# HTTP Port (default: 8080)
# Instance 1: 8080, Instance 2: 8081, etc.
HTTP_PORT=8080

# WebSocket Port (default: 9000)
# Instance 1: 9000, Instance 2: 9001, etc.
WEBSOCKET_PORT=9000

# MariaDB Port (default: 3306)
# Instance 1: 3306, Instance 2: 3307, etc.
MARIADB_PORT=3306

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL/MariaDB root password
MYSQL_ROOT_PASSWORD=changeme123

# ========================================
# SITE CONFIGURATION
# ========================================
# Site domain name (e.g., erp.local, site1.local, site2.local)
SITE_NAME=erp.local

# Administrator password for ERPNext
ADMIN_PASSWORD=admin

# ========================================
# OPTIONAL SETTINGS
# ========================================
# Developer Mode (0 = production, 1 = development)
DEVELOPER_MODE=0

# Timezone (optional)
TZ=Europe/Budapest
